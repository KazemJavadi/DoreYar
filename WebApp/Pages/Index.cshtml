    <div class="max-h-screen w-full lg:w-1/3 lg:sticky lg:top-0">
        <div class="flex h-full flex-col">

            <div class="w-full bg-white p-4 rounded-lg shadow-md">
                <h4 class="text-header mt-2"> افزودن دسته ی تازه</h4>

                <form method="post">
                    <input asp-for="Input.Deck.Name" placeholder="نام دسته" class="text-input mt-4" />
                    <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-save"></i> ذخیره</button>
                    <span asp-validation-for="Input.Deck.Name" class=""></span>
                </form>
            </div>

            <div class="w-full flex-1 bg-white p-4 rounded-lg shadow-md mt-4">

                <h4 class="text-header mt-2">افزودن کارت تازه </h4>

                <form method="post" enctype="multipart/form-data">

                    <input type="text" class="text-input mt-4" placeholder="پرسش" value="" />

                    <div id="editor" class="mt-2"></div>
                    <textarea hidden class="textBox" rows="4" placeholder="پاسخ خود را اینجا بنویسید ..."
                        value=""></textarea>

                    <input type="file" class="mt-2" placeholder="گزینش فایل برای بارگذاری ...">

                    <br />

                    <button id="submit" type="submit" class="btn btn-primary mt-2">
                        <i class="fas fa-save"></i> ذخیره
                        کارت
                    </button>
                </form>
            </div>
        </div>
    </div>


    <div class="w-full lg:w-2/3 grid grid-cols-1 mb-5 gap-4 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3">

        @foreach (DeckDto deck in Model.Decks)
        {
            string imagePath = string.Empty;
            if (string.IsNullOrWhiteSpace(deck.HeaderImageName))
                imagePath = "/img/default-deck-header-2560-1440.jpg";
            else
                imagePath = $"{FileHelper.DeckHeaderImagePath}/{deck.HeaderImageName}";

            AddNewEditCardPartialViewModel addNewEditCardPartialViewModel = new();
            addNewEditCardPartialViewModel.IsForEdit = false;
            addNewEditCardPartialViewModel.Input.Card.DeckId = deck.Id;

            <div class="rounded-lg bg-white  p-2 shadow-md border border-slate-100 relative">
                <img class="rounded-lg border" src="@imagePath" alt="" asp-append-version="true">

                <h5 class="mt-2 text-right text-gray-900 rtl">@deck.Name</h5>

                <p class="break-words text-sm text-gray-600 line-clamp-2 m-2 text-right rtl">@deck.Description</p>

                <div class="flex mt-2">
                    <a asp-page="@DeckManagment.ReviewModel.AbsolutePath" asp-route-DeckId="@deck.Id"
                    class="basis-[100%] btn btn-primary">
                        کارت های امروز <i class="fas fa-book-reader"></i>
                    </a>
                </div>

                <a class="text-indigo-900 border border-indigo-500 bg-indigo-50/50 duration-300  hover:bg-indigo-100 focus:ring-2 focus:ring-blue-300 font-extrabold rounded-full  w-10 h-10 absolute left-3 top-3 flex justify-center items-center"
                asp-page="@DeckManagment.DetailModel.AbsolutePath" asp-route-DeckId="@deck.Id" asp-route-PageNumber="1">
                    <i class="fas fa-eye"></i>
                </a>

                <a asp-page="@DeckManagment.SettingModel.AbsolutePath" asp-route-DeckId="@deck.Id"
                class="text-indigo-900 border border-indigo-500 bg-indigo-50/50 duration-300  hover:bg-indigo-100 focus:ring-2 focus:ring-blue-300 font-extrabold rounded-full  w-10 h-10 absolute left-3 top-14 flex justify-center items-center">
                    <i class="fas fa-cog align-baseline"></i>
                </a>

            </div>
        }
    </div>

</div>