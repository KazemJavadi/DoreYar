    <div class="max-h-screen w-full lg:w-1/3 lg:sticky lg:top-0 bg-red-300">
        <div class="flex h-full flex-col">

            <div class="w-full bg-white p-4 rounded-lg shadow-2xl">
                <h4 class="text-header mt-2"> افزودن دسته ی تازه</h4>

                <form method="post">
                    <input asp-for="Input.Deck.Name" placeholder="نام دسته" class="text-input mt-4" />
                    <button type="submit" class="btn btn-primary mt-2"><i class="fas fa-save"></i> ذخیره</button>
                    <span asp-validation-for="Input.Deck.Name" class=""></span>
                </form>
            </div>

            <div class="w-full flex-1 bg-white p-4 rounded-lg shadow-2xl mt-4">

                <h4 class="text-header mt-2">افزودن کارت تازه </h4>

                <form method="post" enctype="multipart/form-data">

                    <input type="text" class="text-input mt-4" placeholder="پرسش" value="" />

                    <div id="editor" class="text-input mt-2"></div>
                    <textarea hidden class="textBox" rows="4" placeholder="پاسخ خود را اینجا بنویسید ..."
                        value=""></textarea>

                    <input type="file" class="mt-2" placeholder="گزینش فایل برای بارگذاری ...">

                    <br />

                    <button id="submit" type="submit" class="btn btn-primary mt-2"><i class="fas fa-save"></i> ذخیره
                        کارت</button>
                </form>
            </div>
        </div>
    </div>


    <div class="w-full lg:w-2/3 grid grid-cols-1 mb-5 gap-4 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-3">

        @foreach (DeckDto deck in Model.Decks)
        {
            string imagePath = string.Empty;
            if (string.IsNullOrWhiteSpace(deck.HeaderImageName))
                imagePath = "/img/default-deck-header-2560-1440.jpg";
            else
                imagePath = $"{FileHelper.DeckHeaderImagePath}/{deck.HeaderImageName}";

            AddNewEditCardPartialViewModel addNewEditCardPartialViewModel = new();
            addNewEditCardPartialViewModel.IsForEdit = false;
            addNewEditCardPartialViewModel.Input.Card.DeckId = deck.Id;

            <div class="rounded-lg bg-white p-2 shadow-2xl border">
                <img class="rounded-lg" src="@imagePath" alt="" asp-append-version="true">

                <div class="">
                    <h5 class="">@deck.Name</h5>
                    <p class="overflow-auto">@deck.Description</p>

                    <a asp-page="@DeckManagment.ReviewModel.AbsolutePath" asp-route-DeckId="@deck.Id"
                    class="btn btn-primary w-full text-right">
                        کارت های امروز <i class="fas fa-book-reader"></i>
                    </a>
                    <div class="">
                        <button class="" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
                        aria-expanded="false">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                        <ul class="dropdown-menu rtl" aria-labelledby="dropdownMenuButton1">
                            @{
                                string modalId = $"AndNewCard{deck.Id}";
                                string modalLabel = $"{modalId}Label";
                            }
                            @*<li><button type="button" class="dropdown-item" data-bs-toggle="modal"
                                data-bs-target="#@modalId"><i class="fas fa-plus"></i> Add new card</button></li>*@
                            <li class="">
                                <a asp-page="@DeckManagment.DetailModel.AbsolutePath" asp-route-DeckId="@deck.Id"
                                asp-route-PageNumber="1" class="dropdown-item rtl">
                                    <i class="fas fa-eye"></i> جزئیات
                                </a>
                            </li>
                            <li class="">
                                <a asp-page="@DeckManagment.SettingModel.AbsolutePath" asp-route-DeckId="@deck.Id"
                                class="dropdown-item rtl"><i class="fas fa-cog"></i> تنظیمات </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>

</div>