@page
@model IndexModel
@{
    ViewData["Title"] = "YadYar Home";
}

<div class="border border-dark rounded p-4 pt-2 mb-4 mt-4 shadow">
    <h2 class="display-6">Add new deck</h2>
    <form method="post" asp-controller="Deck" asp-action="Add" class="">

        <div class="input-group input-group-lg">
            <input type="text" id="Deck_Name" name="Deck.Name" placeholder="Deck name" class="form-control" />
            <button type="submit" class="btn btn-primary">Save deck</button>
        </div>
    </form>
</div>

<div class="border border-dark rounded p-4 pt-2 shadow">
    <h2 class="display-6 pb-4">My decks</h2>

    @if (@Model.Decks == null || @Model.Decks.Count <= 0)
    {
        <div>
            <p>Not deck found</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
            @foreach (Deck deck in Model.Decks)
            {
                string imagePath = string.Empty;
                if (string.IsNullOrWhiteSpace(deck.DeckHeaderImageName))
                    imagePath = "/img/default-deck-header-2560-1440.jpg";
                else
                    imagePath = $"{FileHelper.DeckHeaderPath}/{deck.DeckHeaderImageName}";

                <div class="col mb-4">
                    <div class="card shadow-sm rounded-3">
                        <img class="card-img-top" src="@imagePath" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@deck.Name</h5>
                            <p class="card-text">@deck.Description</p>

                            <a class="btn btn-primary"><i class="fas fa-book-reader"></i> Today review</a>
                            <div class="dropdown fa-pull-right">
                                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-h"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    @{
                                        string modalId = $"AndNewCard{deck.Id}";
                                        string modalLabel = $"{modalId}Label";
                                    }
                                    <li><button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#@modalId"><i class="fas fa-plus"></i> Add new card</button></li>
                                    <li><a asp-page="@DeckManagment.DetailModel.AbsolutePath" asp-route-DeckId="@deck.Id" asp-route-PageNumber="1" class="dropdown-item"><i class="fas fa-eye"></i> Detail</a></li>
                                    <li><a asp-page="@DeckManagment.SettingModel.AbsolutePath" asp-route-DeckId="@deck.Id" class="dropdown-item"><i class="fas fa-cog"></i> Setting</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>


                <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content p-0">
                            <div class="modal-header">
                                <h5 class="modal-title" id="@modalLabel">Add new card to <strong>@deck.Name</strong></h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>                     
                            </div>
                            <div class="modal-body">
                                <partial name="/Pages/CardManagment/_AddNewCard.cshtml" model="@deck.Id" />
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    }

</div>
