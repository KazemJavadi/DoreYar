@model SuccessErrorPartialViewModel
@{
    string alertType = Model.MessageType switch
    {
        MessageType.Success => "alert-success",
        MessageType.Error => "alert-danger",
        _ => ""
    };
}

<div role="alert" aria-live="assertive" aria-atomic="true" class="toast" data-autohide="false">
  <div class="toast-header">
    <img src="..." class="rounded mr-2" alt="...">
    <strong class="mr-auto">Bootstrap</strong>
    <small>11 mins ago</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    Hello, world! This is a toast message.
  </div>
</div>

<div id="alert" class="alert @alertType alert-dismissible fade show mt-4 mb-0 shadow rtl" role="alert">
    @switch (@Model.MessageType)
    {
        case MessageType.Success:
            <i class="fas fa-check-circle"></i>
            break;
        case MessageType.Error:
            <i class="fas fa-exclamation-circle"></i>
            break;
    }

    @Html.Raw(Model.Message)
    @*<button type="button" class="btn-close float-start" data-bs-dismiss="alert" aria-label="Close"></button>*@
</div>

<script>
  
  setTimeout(() => {
    document.getElementById("alert").style.display = "none";
  }, 3000);

</script>