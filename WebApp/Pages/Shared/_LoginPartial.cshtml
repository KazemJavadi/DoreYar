@using Microsoft.AspNetCore.Identity
@using DataAccess.Entities;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@*<ul class="navbar-nav">*@
@if (SignInManager.IsSignedIn(User))
{
    <li class="">
        <a  class="block py-2 pl-4 pr-3 text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="block py-2 pl-4 pr-3 text-white">بیرون</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="block py-2 pl-4 pr-3 text-white" asp-area="Identity" asp-page="/Account/Register">بیرون</a>
    </li>
    <li class="nav-item">
        <a class="block py-2 pl-4 pr-3 text-white" asp-area="Identity" asp-page="/Account/Login">درون</a>
    </li>
}
@*</ul>*@