<div class="border border-dark rounded p-4 mt-4 mb-4 shadow">

    @if (Model.ReviewCard == null)
    {
        <h2 class="text-danger">No card exist for review</h2>
    }
    else
    {
        <div class="card border-primary mb-2">
            <div class="card-header bg-primary text-white"><strong><i class="far fa-question-circle"></i> Question</strong></div>
            <div class="card-body bg-light">
                <p class="card-text fs-2">@Model.ReviewCard.Question</p>
            </div>
        </div>

        <button id="showAnswer" class="btn btn-primary" onclick="myFunction()"><i class="fa fa-eye" aria-hidden="true"></i></button>
        <a id="correct" style="display:none" class="btn btn-success" asp-controller="Review" asp-action="Correct" asp-route-cardId="@Model.ReviewCard.Id"><i class="fa fa-check fa-lg" aria-hidden="true"></i> Correct</a>
        <a id="incorrect" style="display:none" class="btn btn-danger"><i class="fa fa-times fa-lg" aria-hidden="true"></i> Incorrect</a>

        <div id="answerDiv" style="display:none" class="card border-success mt-1">
            <div class="card-header bg-success text-white"><strong><i class="far fa-lightbulb"></i> Answer</strong></div>
            <div class="card-body bg-light">
                <p class="card-text fs-2">@Model.ReviewCard.Answer</p>
            </div>
        </div>


    }
</div>


<a asp-page="@Pages.IndexModel.Path" class="btn btn-outline-primary shadow"><i class="fas fa-chevron-left"></i> Back</a>

<script>

    function myFunction() {

      var a = document.getElementById("showAnswer");
                var answer = document.getElementById("answerDiv");
      var x = document.getElementById("incorrect");
      var y = document.getElementById("correct");
      //a.style.display= "none";
      if(a.innerHTML.includes('<i class="fa fa-eye" aria-hidden="true"></i>'))
      {
      answer.style.display = "";

       x.style.display = "";
        y.style.display = "";
        a.innerHTML = '<i class="fa fa-eye-slash" aria-hidden="true"></i>';
      }
      else
      {
                answer.style.display = "none";

       x.style.display = "none";
        y.style.display = "none";
          a.innerHTML = '<i class="fa fa-eye" aria-hidden="true"></i>';
      }




