@page
@model LoginModel

@{
    ViewData["Title"] = "درون";
}

<section class="max-w-xl m-auto w-full p-4  rounded-2xl backdrop-filter backdrop-blur-sm shadow-lg text-white border">
    <form id="account" method="post" class="gap-4">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />

        <div class="text-right flex flex-col gap-4">


            <div class="mt-2 flex flex-row-reverse items-center gap-2">
                <label asp-for="Input.Email" class=""></label>
                <input asp-for="Input.Email" class="text-input w-full" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mt-2 flex flex-row-reverse items-center gap-2">
                <label asp-for="Input.Password" class=""></label>
                <input asp-for="Input.Password" class="text-input w-full" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            
            <div class="flex flex-row-reverse">
                <span class="basis-1/12"></span>
                <label asp-for="Input.RememberMe" class="pr-3 cursor-pointer w-full flex flex-row-reverse items-center gap-2">
                    <input class="cursor-pointer" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>


        <div>
            <button id="login-submit" type="submit" class="btn btn-primary mt-2">برو به درون</button>
        </div>

        <div class="mt-4 text-xs flex flex-row-reverse gap-4 items-center justify-between">
            <div class="flex flex-row gap-4">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="">گذرواژه ی خود را فراموش کرده اید؟</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="mt-2" >یک حساب نو باز کن</a>
                </p>
            </div>
            
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="mt-2" >ایمیل تایید را دوباره بفرست</a>
            </p>
        </div>
    </form>
</section>
